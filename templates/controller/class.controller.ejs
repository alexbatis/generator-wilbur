<% 
const modelNameLowerCaseFirst = tsClass.name.charAt(0).toLowerCase() + tsClass.name.substring(1);
-%>
/* -------------------------------------------------------------------------- */
/*                                   IMPORTS                                  */
/* -------------------------------------------------------------------------- */
/* ------------------------------- THIRD PARTY ------------------------------ */
import { Request, Response } from "express";
/* --------------------------------- CUSTOM --------------------------------- */
import { <%- modelNameLowerCaseFirst %>Service } from "@services";


/* -------------------------------------------------------------------------- */
/*                            CONTROLLER DEFINITION                           */
/* -------------------------------------------------------------------------- */
export class <%- tsClass.name %>Controller {
    async all() {
        return <%- modelNameLowerCaseFirst %>Service.all();
    }

    async byId(req: Request) {
        return <%- modelNameLowerCaseFirst %>Service.byID(req.params.id);
    }

    async create(req: Request, res: Response) {
        const <%- modelNameLowerCaseFirst %> = await <%- modelNameLowerCaseFirst %>Service.create(req.body);
        return res.status(201).json(<%- modelNameLowerCaseFirst %>);
    }

    async update(req: Request) {
        return <%- modelNameLowerCaseFirst %>Service.update(req.params.id, req.body);
    }

    async remove(req: Request, res: Response) {
        await <%- modelNameLowerCaseFirst %>Service.delete(req.params.id);
        return res.status(204).send();
    }
}

// Exported Instance
export const <%- modelNameLowerCaseFirst %>Controller = new <%- tsClass.name %>Controller();
