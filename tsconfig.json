{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es2015",
			"es2017",
			"dom"
		],
		"noImplicitAny": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"types": [
			"node"
		],
		"outDir": "generators",
		"baseUrl": "", // This must be specified if "paths" is.
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"typeRoots": [
			"../node_modules/@types"
		],
		"isolatedModules": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": false,
		"removeComments": true,
		"noLib": false,
		"preserveConstEnums": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"src/templates"
	]
}